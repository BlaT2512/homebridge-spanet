{
  "pluginAlias": "SpaNETPlugin",
  "pluginType": "platform",
  "singular": true,
  "footerDisplay": "For support visit [GitHub repository](https://github.com/BlaT2512/homebridge-spanet)",
  "schema": {
    "type": "object",
    "properties": {
      "email": {
        "title": "Email",
        "type": "string",
        "required": true,
        "description": "Email which you use to log into the SpaLINK app"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "Password of your SpaLINK app account"
      },
      "spaName": {
        "title": "Spa Name",
        "type": "string",
        "required": true,
        "description": "Name of the spa as seen in the SpaLINK app"
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        "email",
        {
          "key": "password",
          "type": "password"
        }
      ]
    },
    "spaName"
  ]
}